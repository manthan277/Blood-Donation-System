<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    body{
        margin : 0;
        padding : 0;
    }
    ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
      overflow: hidden;
      background-color:-moz-radial-gradient(0% 100%, ellipse cover, rgba(104,128,138,.4) 10%,rgba(138,114,76,0) 40%),-moz-linear-gradient(top,  rgba(57,173,219,.25) 0%, rgba(42,60,87,.4) 100%), -moz-linear-gradient(-45deg,  #670d10 0%, #092756 100%);
    }
    li {
      float: right;
    }
    li:last-child {
      border-right: none;
    }
    
    li a {
      display: block;
      color: white;
      text-align: center;
      margin-right: 20px;
      padding: 14px 16px;
      text-decoration: none;
    }
    
    li a:hover:not(.active) {
      background-color: #111;
    }
    h1 {
        color: red;
    }

    h2{
        margin: 20px;
    }
    
    h1 a {
    color: red;
    }

    /* .active {
      background-color: grey;
    } */
    </style>
</head>
<body>
    
  <h1 style="margin:30px;margin-top: 20px;margin-bottom: 0px;"><a href="/">BDMS</a></h1>
  <ul>
    <% if(user) { %>
      <li><a href="/logout">Log Out</a></li>
      <li><a href="/banks">Enquire</a></li>
      <li><a href="/AddDetails">Donate</a></li>
      <li><a href="/">Home</a></li>
      <li><a href="/">Welcome, <%= user.name %></a></li>
      <% } else { %>
        <% if(admin) { %>
          <li><a href="/logout">Log Out</a></li>
          <li><a href="/banks">Enquire</a></li>
          <li><a href="/">Home</a></li>
          <li><a href="/">Welcome, <%= admin.name %></a></li>
        <% } else { %>
          <li><a href="/banks">Enquire</a></li>
          <li><a href="/signup">Sign Up</a></li>
          <li><a href="/login">Log In</a></li>
          <li><a href="/">Home</a></li>
        <% } %>
      <% } %>
  </ul>
    <div class="details content">
        <h1 style="margin: 50px;"><%= bank.name %></h1>
        <div class="content">
            <h2>A+ :   <%= bank.AP %> Units</h2>
            <h2>A- :   <%= bank.AN %> Units</h2>
            <h2>B+ :   <%= bank.BP %> Units</h2>
            <h2>B- :   <%= bank.BN %> Units</h2>
            <h2>AB+ :  <%= bank.ABP %> Units</h2>
            <h2>AB- :  <%= bank.ABN %> Units</h2>
            <h2>O+ :   <%= bank.OP %> Units</h2>
            <h2>O- :   <%= bank.ON %> Units</h2>
        </div>
    </div>
  <% if (admin) { %>
    <div class="details content">
    <h1 style="margin: 50px;">Donars Database of bank</h1>
    <div class="content">
    <table style="width:90%;">
      <tr>
        <th>Donars Name</th>
        <th>Blood Group</th>
        <th>Units Donated</th>
        <th>Donated Date</th>
      </tr>
      <% if(donate.length>0) { %>
        <% donate.forEach(d => { %>
          <tr>
            <th><%= d.donar_name %></th>
            <th><%= d.blood_group %></th>
            <th><%= d.quantity %></th>
            <th><%= d.donation_date %></th>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <th>-</th>
          <th>-</th>
          <th>-</th>
          <th>-</th>
        </tr>
      <% } %>
    </table>
    <% if(donate.length==0) { %>
      <p style="font-size: 23px;">No donars to display....</p>
    <% } %>
  <% } %>
    </div>
  </div>  

  <div style="text-align: center;margin: 50px;font-size: 21px;">
    <p>For More Details: </p>
    <p>Contact: <%= bank.contact %></p>
    <p>Email: <%= bank.email %></p>
    <p>Address: <%= bank.address %></p>
  </div>

  <footer>Copyright	&#169; 2020 Blood Bank Management System</footer>

</body>
</html>