<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    body{
        margin : 0;
        padding : 0;
    }
    ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
      overflow: hidden;
      background-color:-moz-radial-gradient(0% 100%, ellipse cover, rgba(104,128,138,.4) 10%,rgba(138,114,76,0) 40%),-moz-linear-gradient(top,  rgba(57,173,219,.25) 0%, rgba(42,60,87,.4) 100%), -moz-linear-gradient(-45deg,  #670d10 0%, #092756 100%);
    }
    li {
      float: right;
    }
    li:last-child {
      border-right: none;
    }
    
    li a {
      display: block;
      color: white;
      text-align: center;
      margin-right: 20px;
      padding: 14px 16px;
      text-decoration: none;
    }
    
    li a:hover:not(.active) {
      background-color: #111;
    }

    h1 {
        color: red;
    }

    .content{
	    margin-left: 80px;
    }
 
    h1 a {
    color: red;
    }

    
    /* .active {
      background-color: grey;
    } */
    </style>
</head>
<body>
    
  <h1 style="margin:30px;margin-top: 20px;margin-bottom: 0px;"><a href="/">BDMS</a></h1>
  <ul>
    <% if(user) { %>
      <li><a href="/logout">Log Out</a></li>
      <li><a href="/banks">Enquire</a></li>
      <li><a href="/AddDetails">Donate</a></li>
      <li><a href="/">Home</a></li>
      <li><a href="/">Welcome, <%= user.name %></a></li>
      <% } else { %>
        <% if(admin) { %>
          <li><a href="/logout">Log Out</a></li>
          <li><a href="/banks">Enquire</a></li>
          <li><a href="/">Home</a></li>
          <li><a href="/">Welcome, <%= admin.name %></a></li>
        <% } else { %>
          <li><a href="/banks">Enquire</a></li>
          <li><a href="/signup">Sign Up</a></li>
          <li><a href="/login">Log In</a></li>
          <li><a href="/">Home</a></li>
        <% } %>
      <% } %>
  </ul>
    
    <div class="banks content">
        <h1 style="margin-top: 80px;margin-left: 20px;">Blood Banks</h1>

        <% if(banks.length>0) { %>
            <% banks.forEach(banks => { %>
                <a class="single" href="/banks/<%= banks._id %>">
                    <h2 class="title"><%= banks.name %></h2>
                </a>
            <% }) %>
        <% } else { %>
            <p>No Banks to display.....</p>
        <% } %>
    </div>

    <div style="margin-left: 100px;">
      <% if(admin) { %>
        <h1><a href="/addBank">Add New Bank</a></h1>
      <% } %>
    </div>

    <footer>Copyright	&#169; 2020 Blood Bank Management System</footer>
</body>
</html>